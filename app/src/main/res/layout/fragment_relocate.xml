<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="30sp"
        android:text="PremjeÅ¡taj"></TextView>

    <LinearLayout
        android:id="@+id/linearLayoutGet"
        android:layout_width="412dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonTake"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/buttonGet"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_upload" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGet"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_download" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRelocate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/buttonTake"
            android:backgroundTint="@color/blue"
            android:background="@drawable/ic_premjesti" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/buttonTake"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_logout" />


    </LinearLayout>
</RelativeLayout>